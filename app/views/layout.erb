<!doctype html>
<html>
  <head>
    <title>Fwitter</title>
  </head>
  <body>
    <nav>
    <% if logged_in? %>
      <a href="/tweets/new"> Create Tweet </a>
      <a href="/logout"> Log Out </a>
      <p>Welcome, <%=current_user.username %></p>
    <% else %>
      <a href="/signup">Sign Up</a>
      <a href="/login"> Log In </a>
    <%end %>
    </nav>
    <div class="container">
      <%= yield %>

      <% @tweets.each do |tweet| %>
      <div>
        <%= tweet.content %>
      </div>
      <% end %>
    </div>
  </body>
</html>
